block content
    section.section-tilte 
        .container.breakpoints 
            .row.gy-3
                .col-md-3
                    .main-banner-bx 
                        .main-banner-itm 
                            img.main-slide-img(src='@img/mainban1.svg')
                        .main-banner-itm
                            img.main-slide-img(src='@img/mainban1.svg')  
                        .main-banner-itm  
                            img.main-slide-img(src='@img/mainban1.svg')

                .col-md-9 
                    #main-slider 
                         .swiper-wrapper
                            .swiper-slide.main-slide-itm
                                .main-slide-ti 
                                    img.main-slide-img(src='@img/main1.svg')
